{
    "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
    "blocks": [
        {
            "alignment": "left",
            "segments": [
                {
                    "type": "python",
                    "style": "plain",
                    "template": "{{ if .Error }}{{ else }}{{ if .Venv }}({{ .Venv }}){{ end }}{{ end }} ",
                    "properties": {
                        "display_virtual_env": true,
                        "dispplay_default": true,
                        "display_version": true,
                        "home_enabled": true,
                        "display_mode": "always"
                    }
                },
                {
                    "foreground": "#45F1C2",
                    "style": "plain",
                    "template": "{{ .UserName }}",
                    "type": "session"
                },
                {
                    "style": "plain",
                    "template": ":",
                    "type": "text"
                },
                {
                    "foreground": "#56B6C2",
                    "properties": {
                        "style": "folder"
                    },
                    "style": "plain",
                    "template": "{{ .Path }} ",
                    "type": "path"
                },
                {
                    "foreground": "#D0666F",
                    "properties": {
                        "branch_icon": ""
                    },
                    "style": "plain",
                    "template": "<#5FAAE8>git:(</>{{ .HEAD }}<#5FAAE8>)</> ",
                    "type": "git"
                },
                {
                    "foreground": "#C2F78D",
                    "foreground_templates": [
                        "{{ if gt .Code 0 }}#D0666F{{ end }}"
                    ],
                    "style": "plain",
                    "template": ">",
                    "type": "text"
                }
            ],
            "type": "prompt"
        }
    ],
    "final_space": true,
    "version": 3
}
